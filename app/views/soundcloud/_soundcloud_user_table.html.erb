<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Username (full name)</th>
        <th>Status</th>
      </tr>
    </thead>
    <body>
      <% soundcloud_users.each do |user| %>
        <tr>
          <td>
            <%= user.username %>
            <% if user.full_name.present? %>
              <%= " (" + user.full_name + ")" %>
            <% end %>
          </td>
          <td>
            <%= render partial: "import_form", locals: {user: user} %>
          </td>
        </tr>
      <% end %>
    </body>
  </table>
</div>
